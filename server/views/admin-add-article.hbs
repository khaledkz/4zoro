<form method="post" class="container mt-5">
    <div class="form-group row has-success">
        <label for="example-text-input text-info" class="col-12 col-form-label">
            <h3 class="text-primary">Title:</h3>
        </label>
        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="title" id="example-text-input">
        </div>
    </div>

    <div class="form-group has-success">
        <label class="text-success">
            <h3 class="text-primary">Full Content:</h3>
        </label>
        <textarea rows="20" class="form-control form-control-success mb-4" id="inputSuccess1" name="fullContent"></textarea>
    </div>

    <div class="form-group row has-success">
        <label for="example-text-input text-info" class="col-12 col-form-label">
            <h3 class="text-primary">Publisher:</h3>
        </label>
        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="publisherName" id="example-text-input">
        </div>
    </div>

    <div class="form-group row has-success">
        <label for="example-text-input text-info" class="col-12 col-form-label">
            <h3 class="text-primary">date:</h3>
        </label>
        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="date" id="example-text-input">
        </div>
    </div>

    <div class="form-group row has-success">
        <label for="example-text-input text-info" class="col-12 col-form-label">
            <h3 class="text-primary">video:</h3>
        </label>
        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="video" id="example-text-input">
        </div>
    </div>

     <div class="form-group row has-success">
        <label for="example-text-input text-info" class="col-12 col-form-label">
            <h3 class="text-primary">Image:</h3>
        </label>
        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="image" id="example-text-input" value="http://pm1.narvii.com/5856/dac779189dc23ed6aad98d850ace0b397cc14c5a_hq.jpg">
        </div>
    </div>

    <div class="form-group row has-success">
        <label for="example-text-input text-info" class="col-12 col-form-label">
            <h3 class="text-primary">ArticleType:</h3>
        </label>
        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="articleType" id="example-text-input">
        </div>
    </div>

    <div class="form-check">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="visible" id="optionsRadios1" value="true" checked>
        <h3>visible</h3>
      </label>
    
    </div>
 
    <div class="form-check">
    <label class="form-check-label">
        <input type="radio" class="form-check-input" name="visible" id="optionsRadios2" value="false">
        <h3>Hide</h3> 
       </label>
    </div>

    <input class="btn btn-primary" type="submit" value="Submit">

</form>